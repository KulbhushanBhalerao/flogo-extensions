          {
            "id": "StartActivity",
            "name": "StartActivity",
            "description": "NoOp Activity",
            "activity": {
              "ref": "#noop"
            }
          },
          {
            "id": "PrometheusMetricsConverter",
            "name": "PrometheusMetricsConverter",
            "description": "Converts JSON messages into Prometheus metric format with configurable metric types, labels, and timestamps.",
            "activity": {
              "ref": "#prometheus-metrics",
              "settings": {
                "metricType": "gauge",
                "metricName": "house_stats",
                "includeHelp": true,
                "includeType": true,
                "timestamp": false
              },
              "input": {
                "metricData": {
                  "mapping": {
                    "environment": "production",
                    "dinningroom_temp": 33,
                    "humidity": 55,
                    "housename": "House"
                  }
                }
              },
              "schemas": {
                "input": {
                  "metricData": {
                    "type": "json",
                    "value": "{\"$schema\":\"http://json-schema.org/draft-04/schema#\",\"type\":\"object\",\"properties\":{\"masterbedroom_temp\":{\"type\":\"number\"},\"dinningroom_temp\":{\"type\":\"number\"},\"humidity\":{\"type\":\"number\"},\"housename\":{\"type\":\"string\"},\"environment\":{\"type\":\"string\"}}}",
                    "fe_metadata": "{\n\"masterbedroom_temp\": 22,\n\"dinningroom_temp\": 20,\n\"humidity\": 45,\n\"housename\": \"house\",\n\"environment\": \"production\"\n}\n\n"
                  }
                }
              },
              "feSchemaMap": {}
            }
          },
          {
            "id": "LogMessage",
            "name": "LogMessage",
            "description": "Simple Log Message Activity",
            "activity": {
              "ref": "#log",
              "input": {
                "Log Level": "INFO",
                "flowInfo": true,
                "message": "=$activity[PrometheusMetricsConverter].prometheusMetric",
                "logLevel": ""
              }
            }
          },
          {
            "id": "Return",
            "name": "Return",
            "description": "Simple Return Activity",
            "activity": {
              "ref": "#actreturn",
              "settings": {
                "mappings": {
                  "message": "=$activity[PrometheusMetricsConverter].prometheusMetric",
                  "code": 200
                }
              }
            }
          }
        ],
